<h1><%= @product.name%></h1>
<ul>
  <li><%= link_to 'Add new Product', new_user_store_product_path %></li>
  <li><%= link_to 'edit',  edit_user_store_product_path %></li>
  <li><%= link_to 'All Product', user_store_products_path%></li>
</ul>
<hr/>
<table>
  <thead>
    <tr>
      <th>name</th>
      <th>description</th>
      <th>price</th>
      <th>weight</th>
      <% if @product.stock != nil%>

      <th>stock</th>
      <% end%>


      <th>store</th>
      <th>seller</th>


    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @product.name %></td>
      <td><%= @product.description %></td>
      <td><%= @product.price %></td>
      <td><%= @product.weight %></td>
      <% if @product.stock != nil%>
      <td><%= @product.stock.quantity %></td>
      <% end%>



      
      <td><%= @product.store.name %></td>
      <td><%= @product.store.user.email %></td>



      <td><%= link_to 'edit', edit_user_store_product_path(@product)%></td>
      <td><%= link_to 'delete', user_store_product_path(@product), method: :delete, data: {confirm: 'Are you sure?'}%></td>
    <button class="bg-blue-800 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
          <%= link_to 'set stock', new_user_store_product_stock_path(current_user,@store,@product,@stock)%>
    </button>
   
    </tr>
  </tbody>
</table>
