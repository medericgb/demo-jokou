<% if @order %>
  <div class="flex flex-col text-2xl font-bold mt-10 items-center">
    <% @order.cart.line_items.each do |item| %>
      <div>
        Produit: <%= item.product.name %>.
        Qty: <%= item.quantity %>
      </div>
    <% end %>
    Prix total de la commande : <%= @order.cart.total_price %> XOF
    <div>
      <i class="fad fa-times-circle text-3xl text-red-500"></i>
      <i class="fad fa-check-circle text-3xl text-green-500"></i>
    </div>
  </div>
<% end %>

<% if @user_order %>
  <div class="flex flex-col text-2xl font-bold mt-10 items-center">
    <h2>
      Store : <%= @user_order.cart.store.name %>
    </h2>
    <% @user_order.cart.line_items.each do |item| %>
      <div>
        Produit : <%= item.product.name %>.
        <a href="<%= user_order_path(@user_order) %>" data-method="DELETE", data-confirm="Supprimer la commande ?">
          <i class="fad fa-times-circle text-3xl text-red-500"></i>
        </a>
      </div>
      <div>
        Quantit√©: <%= item.quantity %>.
        Prix total: <%= item.total_price %> XOF
      </div>
    <% end %>
  </div>
<% end %>

