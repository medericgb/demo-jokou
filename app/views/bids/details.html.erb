 <div class="xl:w-2/2 md:w-1/3 p-8 mx-auto inline-block">
    <div
      class="
        c-card
        block
        bg-white
        shadow-md
        hover:shadow-xl
        rounded-lg
        overflow-hidden
      "
    >
      <img
        class="
          lg:h-60
          xl:h-56
          md:h-64
          sm:h-72
          xs:h-72
          h-72
          rounded
          w-full
          object-cover object-center
          mb-4
        "
        src="https://picsum.photos/720/400"
        alt="Image Size 720x400"
      />
      <div class="p-4">
        <div class="inline-flex">
          <h3 class="tracking-widest text-lg font-medium title-font mr-5 ">
            Nom du produit: 
          </h3>
          <h3
            class="tracking-widest text-red-500 text-lg font-medium title-font "
          >
            <%= @bid.product.name%>
          
          </h3>
        </div>
        <div class="py-4 border-t border-b text-xs text-gray-700">
          <div class="grid  gap-6">
            <div class="col-span-2">
              <i class="fas fa-stopwatch w-5"></i> Début de l'Enchères :
              <span
                class="
                  inline-flex
                  items-center
                  justify-center
                  px-2
                  py-1
                  text-xs
                  font-bold
                  leading-none
                  text-white
                  bg-green-400
                  rounded-full
                "
                ><%=  @bid.start_date.strftime("%d/%m/%Y") + " à " + @bid.start_date.strftime("%H:%M")%></span
              >
            </div>

            <div class="col-span-2">
              <i class="fas fa-stopwatch w-5"></i> Fin de l'Enchères :
              <span
                class="
                  inline-flex
                  items-center
                  justify-center
                  px-2
                  py-1
                  text-xs
                  font-bold
                  leading-none
                  text-white
                  bg-green-400
                  rounded-full
                "
                ><%=@bid.end_date.strftime("%d/%m/%Y") + " à " + @bid.end_date.strftime("%H:%M") %></span
              >
            </div>

            <div class="col-span-2">
             <i class="fas fa-wallet w-5"></i> Prix initial :
              <span
                class="
                  inline-flex
                  items-center
                  justify-center
                  px-2
                  py-1
                  text-xs
                  font-bold
                  leading-none
                  text-white
                  bg-blue-400
                  rounded-full
                "
                ><%=@bid.initial_price%></span>
            </div>
            <%@winner.each do |winner|%>
            <div class="col-span-2">
             <i class="fas fa-wallet w-5"></i> L'offre gagnante :
              <span
                class="
                  inline-flex
                  items-center
                  justify-center
                  px-2
                  py-1
                  text-xs
                  font-bold
                  leading-none
                  text-white
                  bg-blue-400
                  rounded-full
                "
                ><%=winner.amount%></span>
            </div>
            <div class="col-span-2">
             <i class="fas fa-wallet w-5"></i> Le/la gagnant(e) :
              <span
                class="
                  inline-flex
                  items-center
                  justify-center
                  px-2
                  py-1
                  text-xs
                  font-bold
                  leading-none
                  text-white
                  bg-blue-400
                  rounded-full
                "
                ><%=winner.user.email%></span>
            </div>
            <%end%>
            <%if @bid.state == 'actived' || @bid.state != 'waiting' %>
              <div class='flex justify-center items-center'>
                <%= link_to 'Supprimer', store_product_bid_path(@bid.product.store,@bid.product, @bid), method: :delete, data: {confirm: 'Êtes-vous sûr?'}, class:'bg-red-600 text-white px-5 py-2 font-medium rounded' %>
              </div>
            <%end%>
            <%if @bid.validated == false && @bid.state == 'closed'%>
              <div class='flex justify-center items-center'>
                <%= link_to 'Valider', store_product_bid_path(@bid.product.store,@bid.product, @bid), method: :patch, class:'bg-green-600 text-white px-5 py-2 font-medium rounded' %>
              </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>



<% content_for :banners do %>
  <%=render 'shared/banners'%>
<% end %>

<% content_for :footer do %>
  <%=render 'shared/footer'%>
<% end %>