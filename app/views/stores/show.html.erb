<% if @store.background.persisted? %>
<div class="h-12 w-screen"><%= image_tag @store.background%></div>
<% end %>

<div class="flex justify-center text-red-600">
<div>
<h1><%= @store.name%></h1>


 <button>
    <%= link_to 'Add a Product', new_user_store_product_path(current_user, @store)%>
  </button>

<hr/>
<table>
  <thead>
    <tr>
      <th>name</th>
      <th>description</th>
      <th>city</th>
      <th>town</th>
      
     
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @store.name %></td>
      <td><%= @store.description %></td>
      <td><%= @store.city%></td>
      <td><%= @store.town%></td>
      <td>
      <button class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
          <%= link_to 'edit', edit_user_store_path(current_user, @store)%>
        </button>
      </td>
      <td>
        <button class="bg-red-800 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
          <%= link_to 'delete', user_store_path(current_user, @store), method: :delete, data: {confirm: 'Are you sure?'}%>
        </button> 
      </td>
         <td>
        <button class="bg-yellow-800 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded">
          <%= link_to 'My Products', user_store_products_path(current_user,@store, @products)%>
        </button>
      </td>
    </tr>
  </tbody>
</table>

</div>
<div>
 

</div>

 <button>
<% if @store.user == current_user %>

    <%= link_to 'Add a Product', new_user_store_product_path(current_user,@store)%>
  </button>
<% end %>

 
</div>
<table>
  <thead>
    <tr>
      <th>name</th>
      <th>description</th>
      <th>price</th>
      <th>weight</th>
      <th>categories</th>


    </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td><%= product.price %></td>
      <td><%= product.weight %></td>
      <td><%= product.all_categories %></td>
      <td>
        <button class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
          <%= link_to 'edit', edit_user_store_product_path(current_user,@store ,product)%>
        </button>
      </td>
      <td>
        <button class="bg-red-800 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
          <%= link_to 'delete', user_store_product_path(current_user,@store,product), method: :delete, data: {confirm: 'Are you sure?'}%>
        </button>
      </td>
        <td>
        <button class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
          <%= link_to 'show', user_store_product_path(current_user,@store ,product)%>
        </button>
      </td>
      <% if policy(product).create? %>
        <td>
          <button class="bg-red-800 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
            <%= link_to 'add to cart', user_store_product_line_items_path(current_user, @store, product), method: :post %>
          </button>
        </td>
      <% end %>

      
    </tr>
  <% end %>
  </tbody>
</table>