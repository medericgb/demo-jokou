<div class="mb-16">
<a href='<%=product_path(product)%>' class="w-full h-full">
  <div class="h-64 w-full overflow-hidden">
    <% if product.product_backgrounds.attached? %>
      <%=image_tag product.product_backgrounds[0], class:'h-64 w-full object-cover'%>
    <%else%>
      <%=image_tag 'default_product_image.png', class:'h-64 w-full object-cover'%>
    <% end %>
  </div>
  <div class="py-2 flex items-center justify-center">
    <div class="w-3/5 ">
      <p class=" font-medium text-lg"><%=product.name%></p>
      <p class=" font-normal text-sm py-1"><%=product.price%> FCFA</p>
    </div>
    <div class="w-2/5">
      <a href="<%= current_user ? user_store_product_line_items_path(current_user, product.store, product) : new_user_session_path()%>" data-method="POST" class="px-5 py-2 bg-red-600 text-white">
        Acheter
      </a>
    </div>
  </div>
</a>
</div>