<%= form_with model: [current_user ,chat] do |form| %>
  <div style='width:48%; display:inline-block;margin:2% 0;'>
    <%= form.text_field :content, style:'width:95%;padding:12px 5px;border:none;background:#f5f5f5;border-radius:3px', placeholder:'Enter your message here' %>
    <% if chat.errors[:content] %>
      <span style='color: red'><%= chat.errors[:content][0] %></span>
    <% end %>
    <%= form.hidden_field :guest, value: guest.id %>
  </div>
    <%= form.submit "Add", class: "btn btn-outline-primary btn-block py-2 px-10" %>
<%end%>