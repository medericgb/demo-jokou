<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name), class:'ml-2 font-medium text-red-700' %><br />
<% end %>

<div class="w-5/6 py-4 text-right">
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class:'font-medium text-red-700' %><br />
<% end %>
</div>
<div class="w-5/6 py-2"> 
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p class="flex items-center font-light">
      Pas de compte ? <%= link_to "créer votre compte ici", new_registration_path(resource_name), class:'ml-2 font-medium text-red-700' %>
    </p>
  <% end %>
</div>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <div class="flex justify-between pt-8">
    <%- resource_class.omniauth_providers.each do |provider| %>
      <a href="<%#=omniauth_authorize_path(resource_name, provider)%>" data-method="POST" class="px-5 text-gray-500 font-medium border border-gray-100 mr-5 py-1 rounded-md flex items-center">
        <%if OmniAuth::Utils.camelize(provider) != 'Facebook' %>
          <%=image_tag 'Google__G__Logo.svg.png', class:"w-7 h-7 mr-2"%>
          Continue avec Google
        <% else %>
          <%=image_tag 'facebook-round-logo-png-transparent-background-12.png', class:"w-10 h-9 mr-2"%>
          Continue avec Facebook
        <% end %>
      </a>
    <% end %>
  </div>
<% end %>